<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">
    <servlet>
        <servlet-name>main_page</servlet-name>
        <jsp-file>main_page.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>some_servlet</servlet-name>
        <servlet-class>SomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>some_servlet</servlet-name>
        <url-pattern>/some_servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>main_page</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
</web-app>